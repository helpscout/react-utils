{
  "name": "@helpscout/react-utils",
  "version": "1.0.4-2",
  "description": "Handy utilities for React",
  "main": "dist/index.js",
  "private": false,
  "scripts": {
    "add-contributor": "zero contributors add",
    "build": "zero build",
    "bundle": "zero build --bundle",
    "lint": "zero lint",
    "dev": "zero test --watchAll",
    "test": "zero test --coverage",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "validate": "zero validate",
    "setup": "npm install && npm run validate -s",
    "format": "zero format",
    "precommit": "zero lint",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "release": "np --no-yarn --no-publish",
    "version": "npm run build",
    "postversion": "npm publish",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 5005",
    "build-storybook": "build-storybook",
    "prettier": "prettier \"src/**/*.js\" --write",
    "pretty": "npm run prettier"
  },
  "author": "Jon Quach <hello@jonquach.com> (https://jonquach.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helpscout/react-utils.git"
  },
  "bugs": {
    "url": "https://github.com/helpscout/react-utils/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^16 || ^15"
  },
  "devDependencies": {
    "@helpscout/zero": "^0.0.8",
    "@storybook/addon-actions": "^3.4.3",
    "@storybook/addon-links": "^3.4.3",
    "@storybook/addons": "^3.4.3",
    "@storybook/cli": "^3.4.11",
    "@storybook/react": "^3.4.3",
    "coveralls": "3.0.0",
    "enzyme": "2.9.1",
    "husky": "1.0.0-rc.13",
    "np": "2.20.1",
    "nyc": "^13.1.0",
    "react": "^15",
    "react-dom": "^15",
    "react-test-renderer": "16.2.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "create-react-context": "0.2.2",
    "hoist-non-react-statics": "3.0.1"
  }
}
